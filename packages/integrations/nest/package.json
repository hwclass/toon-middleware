{
  "name": "@toon-middleware/nest",
  "version": "1.0.0",
  "description": "NestJS integration for TOON middleware",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "npm run build && node --test dist-test/tests",
    "test:coverage": "npm run build && node --test --experimental-test-coverage dist-test/tests",
    "test:watch": "tsc -p tsconfig.test.json --watch",
    "lint": "eslint src/ tests/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist dist-test"
  },
  "keywords": [
    "nestjs",
    "middleware",
    "toon",
    "llm",
    "token-optimization"
  ],
  "dependencies": {
    "@toon-middleware/core": "workspace:*",
    "@toon-middleware/utils": "workspace:*",
    "@toon-middleware/cache": "workspace:*",
    "@toon-middleware/logger": "workspace:*"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.0",
    "@types/node": "^24.0.0",
    "@types/supertest": "^6.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "supertest": "^7.0.0",
    "typescript": "^5.0.0"
  }
}
